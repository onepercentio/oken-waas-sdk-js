{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "commonjs",
    "target": "ES2021",
    "esModuleInterop":true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "rootDirs":["src"],
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": true
  },
  "compileOnSave": true,
  "include": ["./src/**/*.ts", "index.ts", "./types"],
  "exclude": [
    "node_modules",
    "oken"
  ]
}
